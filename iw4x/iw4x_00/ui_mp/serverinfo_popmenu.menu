#define MENU_NAME									"serverinfo_popmenu"

#define KEYINT_F5									171

#define POPMENU_POS_X								-250
#define POPMENU_POS_Y								-204

#define POPMENU_WIDTH								520
#define POPMENU_HEIGHT								370

